{% extends 'base.html.twig' %}

{% block title %}Professional Events{% endblock %}

{% block header %}
    {% include 'components/_nav.html.twig' %}
{% endblock %}

{% block body %}

    <section class="bg-gradient-to-br from-indigo-600 to-purple-600 text-white">
        <div class="max-w-7xl mx-auto px-6 py-24">
            <h1 class="text-5xl font-extrabold tracking-tight max-w-2xl">
                Discover events worth your time
            </h1>
            <p class="mt-6 text-lg text-indigo-100 max-w-xl">
                Conferences, meetups and workshops for developers, designers and tech teams.
            </p>

            <a href="#events"
               class="inline-block mt-8 px-8 py-4 bg-white text-indigo-600 font-semibold rounded-xl hover:bg-indigo-50 transition">
                Browse events
            </a>
        </div>
    </section>

    <section id="events" class="max-w-7xl mx-auto px-6 py-20">
        <h2 class="text-3xl font-bold tracking-tight mb-12">
            Upcoming events
        </h2>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-10">
            {% set public = events|filter((e) => e.isPublished) %}
            {% for event in public %}
                <a href="{{ path('event_show', { slug: event.slug }) }}"
                   class="group bg-white rounded-2xl border hover:shadow-xl transition overflow-hidden">

                    <div class="relative">
                        <img src="{{ event.image }}"
                             class="h-56 w-full object-cover group-hover:scale-105 transition duration-300">
                        <div class="absolute top-4 left-4 flex items-center gap-2">
                            <span class="bg-white/90 backdrop-blur px-3 py-1 text-xs font-semibold rounded-full">
                                {{ event.date|date('M d') }}
                            </span>

                            <span class="bg-white/90 backdrop-blur px-3 py-1 text-xs font-semibold rounded-full">
                                {{ event.categoryString }}
                            </span>
                        </div>
                        <div class="absolute right-3 bottom-3 flex items-center">
                            <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 text-sm font-semibold text-white">
                                <img class="rounded-full border-indigo-600 border-2" src="{{ app.user.userprofile.avatarurl }}"  alt="Avatar"/>
                            </span>
                        </div>
                    </div>

                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-1">
                            {{ event.title }}
                        </h3>

                        <p class="text-sm text-slate-500 mb-4">
                            {{ event.location }}
                        </p>

                        <div class="flex items-center justify-between text-sm">
                            <span class="font-semibold text-indigo-600">
                            View â†’
                        </span>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>

{% endblock %}

{% block footer %}
    {% include 'components/_footer.html.twig' %}
{% endblock %}
