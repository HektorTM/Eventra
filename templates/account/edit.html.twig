{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block header %}
    {% include 'components/_nav.html.twig' %}
{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto px-4 py-10">

        <div class="rounded-2xl bg-white p-6 shadow-sm">

            <div class="flex items-center gap-6">
                <img
                    class="h-24 w-24 rounded-full object-cover ring-2 ring-slate-200"
                    src="{{ user.userprofile.avatarUrl}}"
                    alt="Avatar"
                />

                <div class="flex-1 min-w-0">
                    <h1 class="text-xl font-semibold text-slate-900 truncate">
                        {{ user.userprofile.displayName }}
                    </h1>
                    <p class="text-sm text-slate-500 truncate">
                        {{ user.email }}
                    </p>

                    <div class="mt-2 flex flex-wrap gap-2">
                        {% for role in user.roles %}
                            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">
                            {{ role|replace({'ROLE_': ''})|lower|capitalize }}
                        </span>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="my-6 border-t border-slate-200"></div>

            {{ form_start(form, { attr: { class: 'space-y-6' } }) }}

            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                <div>
                    {{ form_label(form.displayName, null, {
                        label_attr: { class: 'block text-sm font-medium text-slate-700 mb-1' }
                    }) }}
                    {{ form_widget(form.displayName, {
                        attr: {
                            class: 'w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500'
                        }
                    }) }}
                    {{ form_errors(form.displayName) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">
                        Email
                    </label>
                    <input
                        type="email"
                        value="{{ user.email }}"
                        disabled
                        class="w-full rounded-lg border border-slate-200 bg-slate-100 px-3 py-2 text-sm text-slate-500 cursor-not-allowed"
                    />
                </div>
                <div class="sm:col-span-2">
                    {{ form_label(form.avatarurl, null, {
                        label_attr: { class: 'block text-sm font-medium text-slate-700 mb-1' }
                    }) }}
                    {{ form_widget(form.avatarurl, {
                        attr: {
                            placeholder: 'https://example.com/avatar.jpg',
                            class: 'w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500'
                        }
                    }) }}
                    {{ form_errors(form.avatarurl) }}
                </div>
            </div>

            <div class="mt-6 flex items-center justify-between">
                <a href="{{ path('app_account') }}"
                   class="text-sm font-medium text-slate-600 hover:underline">
                    ‚Üê Go back
                </a>

                <button
                    type="submit"
                    class="rounded-lg bg-slate-900 px-5 py-2 text-sm font-medium text-white hover:bg-slate-700">
                    Save profile
                </button>
            </div>

            <div class="hidden"> {{ form_rest(form) }} </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
