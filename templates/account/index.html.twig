{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block header %} {% include 'components/_nav.html.twig' %} {% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto px-4 py-10">

        <div class="flex items-center gap-6 rounded-2xl bg-white p-6 shadow-sm">
            <img
                class="h-24 w-24 rounded-full object-cover ring-2 ring-slate-200"
                src="{{ user.userprofile.avatarUrl ?? 'https://ui-avatars.com/api/?name='}}"
                alt="Avatar"
            />

            <div class="flex-1 min-w-0">
                <h1 class="text-xl font-semibold text-slate-900 truncate">
                    {{ user.userprofile.displayName }}
                </h1>
                <p class="text-sm text-slate-500 truncate">
                    {{ user.email }}
                </p>

                <div class="mt-2 flex flex-wrap gap-2">
                    {% for role in user.roles %}
                        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">
                        {{ role|replace({'ROLE_': ''})|lower|capitalize }}
                    </span>
                    {% endfor %}
                </div>
            </div>

            <div class="flex gap-2">
                <a href="{#{ path('account_edit') }#}"
                   class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-medium text-white hover:bg-slate-700">
                    Edit profile
                </a>
            </div>
        </div>

        <div class="mt-10 grid grid-cols-1 gap-6 md:grid-cols-3">

            {# LEFT COLUMN #}
            <div class="space-y-6">
                <div class="rounded-2xl bg-white p-6 shadow-sm">
                    <h2 class="mb-4 text-sm font-semibold text-slate-900">
                        Account information
                    </h2>

                    <dl class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <dt class="text-slate-500">User ID</dt>
                            <dd class="font-medium text-slate-900">{{ user.id }}</dd>
                        </div>

                        <div class="flex justify-between">
                            <dt class="text-slate-500">Login method</dt>
                            <dd class="font-medium text-slate-900">
                                {% if user.googleId %}
                                    Google
                                {% else %}
                                    Email & Password
                                {% endif %}
                            </dd>
                        </div>

                        <div class="flex justify-between">
                            <dt class="text-slate-500">Joined</dt>
                            <dd class="font-medium text-slate-900">
                                {{ user.createdAt|date('d M Y') }}
                            </dd>
                        </div>
                    </dl>
                </div>

                <div class="rounded-2xl bg-white p-6 shadow-sm">
                    <h2 class="mb-4 text-sm font-semibold text-slate-900">
                        Security
                    </h2>

                    <div class="space-y-3">
                        <a href="{#{ path('account_change_password') }#}"
                           class="block rounded-lg border border-slate-200 px-4 py-2 text-sm hover:bg-slate-50">
                            Change password
                        </a>

                        <a href="{#{ path('account_sessions') }#}"
                           class="block rounded-lg border border-slate-200 px-4 py-2 text-sm hover:bg-slate-50">
                            Active sessions
                        </a>
                    </div>
                </div>
            </div>

            <div class="md:col-span-2 space-y-6">
                <div class="rounded-2xl bg-white p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-sm font-semibold text-slate-900">
                            My events
                        </h2>
                        <a href="{#{ path('events_index') }#}"
                           class="text-sm font-medium text-indigo-600 hover:underline">
                            View all
                        </a>
                    </div>

                    {% if upcomingEvents is empty %}
                        <p class="text-sm text-slate-500">
                            You have no upcoming events.
                        </p>
                    {% else %}
                        <ul class="divide-y divide-slate-100">
                            {% for event in upcomingEvents %}
                                <li class="py-3 flex items-center justify-between">
                                    <div>
                                        <p class="text-sm font-medium text-slate-900">
                                            {{ event.title }}
                                        </p>
                                        <p class="text-xs text-slate-500">
                                            {{ event.date|date('d M Y Â· H:i') }}
                                        </p>
                                    </div>
                                    <a href="{{ path('event_show', { slug: event.slug }) }}"
                                       class="text-sm text-indigo-600 hover:underline">
                                        View
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>

                {% if is_granted('ROLE_PUBLISHER') %}
                    <div class="rounded-2xl bg-white p-6 shadow-sm">
                        <h2 class="mb-4 text-sm font-semibold text-slate-900">
                            Publisher tools
                        </h2>

                        <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                            <a href="{{ path('app_dashboard_events_new') }}"
                               class="rounded-lg border border-slate-200 px-4 py-3 text-sm hover:bg-slate-50">
                                Create new event
                            </a>

                            <a href="{{ path('app_dashboard') }}"
                               class="rounded-lg border border-slate-200 px-4 py-3 text-sm hover:bg-slate-50">
                                Publisher dashboard
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
