{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block header %} {% include 'components/_nav.html.twig' %} {% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto px-4 py-10">

        {% include 'components/_account_header.html.twig' with { user: user } %}

        <div class="mt-10 grid grid-cols-1 gap-6 md:grid-cols-3">

            {# LEFT COLUMN #}
            <div class="space-y-6">
                <div class="rounded-2xl bg-white p-6 shadow-sm">
                    <h2 class="mb-4 text-sm font-semibold text-slate-900">
                        Account information
                    </h2>

                    <dl class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <dt class="text-slate-500">User ID</dt>
                            <dd class="font-medium text-slate-900">{{ user.id }}</dd>
                        </div>

                        <div class="flex justify-between">
                            <dt class="text-slate-500">Login method</dt>
                            <dd class="font-medium text-slate-900">
                                {% if user.googleId %}
                                    Google
                                {% else %}
                                    Email & Password
                                {% endif %}
                            </dd>
                        </div>

                        <div class="flex justify-between">
                            <dt class="text-slate-500">Joined</dt>
                            <dd class="font-medium text-slate-900">
                                {{ user.createdAt|date('d M Y') }}
                            </dd>
                        </div>
                    </dl>
                </div>
                {% if is_granted('ROLE_PUBLISHER') %}
                    <div class="rounded-2xl bg-white p-6 shadow-sm">
                        <h2 class="mb-4 text-sm font-semibold text-slate-900">
                            Publisher tools
                        </h2>

                        <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                            <a href="{{ path('app_dashboard_events_new') }}"
                               class="rounded-lg border border-slate-200 px-4 py-3 text-sm hover:bg-slate-50">
                                Create event
                            </a>

                            <a href="{{ path('app_dashboard') }}"
                               class="rounded-lg border border-slate-200 px-4 py-3 text-sm hover:bg-slate-50">
                                Dashboard
                            </a>
                        </div>
                    </div>
                {% endif %}


            </div>

            <div class="md:col-span-2 space-y-6">
                <div class="rounded-2xl bg-white p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-sm font-semibold text-slate-900">
                            Change Password
                        </h2>
                    </div>
                    {{ form_start(form, {
                        attr: { class: 'space-y-6' }
                    }) }}

                    {% if form.vars.errors|length %}
                        <div class="rounded-lg bg-red-50 p-4 text-sm text-red-700">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}

                    <div>
                        {{ form_label(form.currentPassword, null, {
                            label_attr: {
                                class: 'block text-sm font-medium text-slate-700 mb-1'
                            }
                        }) }}

                        {{ form_widget(form.currentPassword, {
                            attr: {
                                class: 'block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-slate-500 focus:ring focus:ring-slate-200',
                                autocomplete: 'current-password'
                            }
                        }) }}

                    </div>

                    <div>
                        {{ form_label(form.newPassword.first, null, {
                            label_attr: {
                                class: 'block text-sm font-medium text-slate-700 mb-1'
                            }
                        }) }}

                        {{ form_widget(form.newPassword.first, {
                            attr: {
                                class: 'block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-slate-500 focus:ring focus:ring-slate-200',
                                autocomplete: 'new-password'
                            }
                        }) }}

                        {{ form_label(form.newPassword.second, null, {
                            label_attr: {
                                class: 'block text-sm font-medium text-slate-700 mb-1'
                            }
                        }) }}

                        {{ form_widget(form.newPassword.second, {
                            attr: {
                                class: 'block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-slate-500 focus:ring focus:ring-slate-200'
                            }
                        }) }}

                        <p class="mt-2 text-xs text-slate-500">
                            Minimum 8 characters, including uppercase, lowercase and a number.
                        </p>
                    </div>

                    <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200">
                        <button
                            type="submit"
                            class="inline-flex items-center rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-400"
                        >
                            Change password
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
