{# templates/components/_flashes.html.twig #}

{% set styles = {
    success: {
        wrap: 'bg-emerald-50 border-emerald-200 text-emerald-900',
        icon: 'text-emerald-600',
        button: 'hover:bg-emerald-100 focus:ring-emerald-300'
    },
    error: {
        wrap: 'bg-red-50 border-red-200 text-red-900',
        icon: 'text-red-600',
        button: 'hover:bg-red-100 focus:ring-red-300'
    },
    warning: {
        wrap: 'bg-amber-50 border-amber-200 text-amber-900',
        icon: 'text-amber-600',
        button: 'hover:bg-amber-100 focus:ring-amber-300'
    },
    info: {
        wrap: 'bg-sky-50 border-sky-200 text-sky-900',
        icon: 'text-sky-600',
        button: 'hover:bg-sky-100 focus:ring-sky-300'
    }
} %}

{% set icons = {
    success: '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.707a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 10-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>',
    error: '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm2.707-10.707a1 1 0 00-1.414-1.414L10 7.586 8.707 6.293a1 1 0 10-1.414 1.414L8.586 9l-1.293 1.293a1 1 0 101.414 1.414L10 10.414l1.293 1.293a1 1 0 001.414-1.414L11.414 9l1.293-1.293z" clip-rule="evenodd"/>',
    warning: '<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.721-1.36 3.486 0l6.518 11.59c.75 1.334-.213 2.99-1.742 2.99H3.48c-1.53 0-2.492-1.656-1.742-2.99l6.52-11.59zM11 14a1 1 0 10-2 0 1 1 0 002 0zm-1-8a1 1 0 00-1 1v4a1 1 0 102 0V7a1 1 0 00-1-1z" clip-rule="evenodd"/>',
    info: '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.5a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM9 9a1 1 0 000 2h.25v3H9a1 1 0 100 2h2a1 1 0 001-1v-5a1 1 0 00-1-1H9z" clip-rule="evenodd"/>'
} %}

{% set order = ['success', 'error', 'warning', 'info'] %}

{% for type in order %}
    {% for message in app.flashes(type) %}
        {% set s = styles[type] ?? styles.info %}

        <div
            class="flash-item relative flex gap-3 rounded-2xl border p-4 shadow-sm {{ s.wrap }}
             opacity-0 translate-y-2 transition-all duration-300"
            role="alert"
        >
            <div class="mt-0.5 shrink-0">
                <svg class="h-5 w-5 {{ s.icon }}" viewBox="0 0 20 20" fill="currentColor">
                    {{ (icons[type] ?? icons.info)|raw }}
                </svg>
            </div>

            <div class="flex-1 text-sm font-medium leading-6">
                {{ message }}
            </div>

            <button
                type="button"
                class="absolute right-2 top-2 rounded-lg p-2 text-current/70 focus:outline-none focus:ring-2 {{ s.button }}"
                onclick="this.closest('.flash-item').remove()"
                aria-label="Dismiss"
            >
                <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
            </button>
        </div>
    {% endfor %}
{% endfor %}

<script>
    document.querySelectorAll('.flash-item').forEach((el, i) => {
        setTimeout(() => {
            el.classList.remove('opacity-0', 'translate-y-2');
        }, 10);

        setTimeout(() => {
            el.classList.add('opacity-0');
            setTimeout(() => el.remove(), 300);
        }, 10000 + i * 200);
    });
</script>
