{% if app.user and not app.user.verified %}
    <div class="mb-6 rounded-xl border border-amber-200 bg-amber-50 px-4 py-3">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div class="flex items-start gap-3">
                <!-- Icon -->
                <div class="mt-0.5 flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-amber-100 text-amber-600">
                    ⚠️
                </div>

                <div class="text-sm text-amber-900">
                    <p class="font-semibold">
                        Verify your email address
                    </p>
                    <p class="text-amber-800">
                        Please verify your email to unlock all Eventra features.
                    </p>
                </div>
            </div>

            <div>
                <a
                    href="{{ path('app_resend_verification') }}"
                    class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500 transition"
                >
                    Resend verification email
                </a>
            </div>
        </div>
    </div>
{% endif %}
