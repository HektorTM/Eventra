{% extends 'base.html.twig' %}

{% block title %}Confirm your email – Eventra{% endblock %}

{% block body %}
    <div class="min-h-[70vh] flex items-center justify-center px-4">
        <div class="w-full max-w-md rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">

            <!-- Icon -->
            <div class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-full bg-indigo-100 text-indigo-600 text-2xl">
                ✉️
            </div>

            <!-- Title -->
            <h1 class="text-center text-2xl font-extrabold text-slate-900">
                Confirm your email
            </h1>

            <!-- Description -->
            <p class="mt-3 text-center text-sm text-slate-600">
                We’ve sent a confirmation link to your email address.
                Please click the link to verify your account and unlock all Eventra features.
            </p>

            <!-- Alerts -->
            {% for message in app.flashes('verify_email_error') %}
                <div class="mt-4 rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-800">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="mt-4 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
                    {{ message }}
                </div>
            {% endfor %}

            <!-- Resend -->
            {% if app.user and not app.user.verified %}
                <div class="mt-6">
                    <a
                        href="{{ path('app_resend_verification') }}"
                        class="block w-full rounded-xl bg-indigo-600 px-4 py-3 text-center text-sm font-semibold text-white hover:bg-indigo-500 transition"
                    >
                        Resend verification email
                    </a>
                </div>
            {% endif %}

            <!-- Footer -->
            <div class="mt-6 text-center text-xs text-slate-500">
                <p>
                    Didn’t receive the email?
                    <br>
                    Check your spam folder or try resending it.
                </p>

                <p class="mt-3">
                    <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:underline">
                        Back to login
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
